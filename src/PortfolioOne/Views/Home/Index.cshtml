@using PortfolioOne.Models
@using PortfolioOne.Core.Utilities.HtmlHelpers
@{
    ViewBag.Title = "Sean McAdams, Enterprise Software Engineer";
}

@section scripts
{
    <script type="text/javascript" src="~/js/creative-brands.js"></script>
    <script type="text/javascript" src="~/js/modernizr.custom.js"></script>
    <script type="text/javascript" src="~/js/custom.js"></script>
    <script type="text/javascript" src="~/js/home.js"></script>
    @if (Html.IsDebug())
    {
        <script type="text/javascript" src="~/lib/waypoints/waypoints.js"></script>
        <script type="text/javascript" src="~/lib/jquery-loadmask/jquery.loadmask.js"></script>
    }
    else
    {
        <script type="text/javascript" src="~/lib/waypoints/waypoints.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-loadmask/jquery.loadmask.min.js"></script>
    }
}

@section styles
{
    <link href="~/css/fontcustom/fontcustom.css" rel="stylesheet" />
    <link href="~/css/creative-brands.css" rel="stylesheet" />
    <link href="~/css/vertical-carousel.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/lib/jquery-loadmask/css/jquery.loadmask.css" rel="stylesheet" />
}

<a href="#page-top" class="scroll-up scroll"><i class="fa fa-chevron-up"></i></a>
<h1>Sean McAdams, Enterprise Software Engineer</h1>

<!-- ==========================
    HEADER - START
=========================== -->
<header>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavigation"><i class="fa fa-bars"></i></button>
                <img src="image/profile.png" class="navbar-logo pull-left" alt="" />
                <a href="index.html" class="navbar-brand animated flipInX">Sean McAdams</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="myNavigation">

                <ul class="nav navbar-nav navbar-right animated flipInX">
                    <li><a href="#about" class="scroll">About me</a></li>
                    <li><a href="#reference" class="scroll">Reference</a></li>
                    <li><a href="#contact" class="scroll">Contact</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav>

    <div class="jumbotron">
        <img src="image/profile.png" class="img-responsive scrollpoint sp-effect3" alt="" />
        <div class="social-wrapper">
            <h2 class="scrollpoint sp-effect3">&nbsp;Sean&nbsp;</h2><br \>
            <ul class="brands brands-inline hidden-xs scrollpoint sp-effect1" data-bind="foreach: LeftPortfolioLinks">
                <li><a target="_blank" data-bind="href: link"><i class="fa" data-bind="css: 'fa-' + name"></i></a></li>
            </ul>
            <h2 class="scrollpoint sp-effect3">McAdams</h2>
            <ul class="brands brands-inline hidden-xs scrollpoint sp-effect2" data-bind="foreach: RightPortfolioLinks">
                <li><a target="_blank" data-bind="href: link"><i class="fa" data-bind="css: 'fa-' + name"></i></a></li>
            </ul>
        </div>
        <!-- Slideshow start -->
        <div id="slideshow" class="carousel slide vertical scrollpoint sp-effect3" data-ride="carousel">
            <div class="carousel-inner">
                <!-- Slideshow item 1 active -->
                <div class="item"><h3><i class="fa fa-exchange icon-first"></i> Excellent communication</h3></div>
                <!-- Slideshow item 2 -->
                <div class="item active"><h3>Enterprise application experience <i class="fa fa-code icon"></i></h3></div>
                <!-- Slideshow item 3 -->
                <div class="item"><h3><i class="fa fa-trophy"></i> Proven solutions</h3></div>
            </div>
        </div>
        <!-- Slideshow end -->
        <a href="#about" class="btn btn-reference btn-lg scroll scrollpoint sp-effect1" role="button"><i class="fa fa-lightbulb-o"></i> About me</a>
        <a href="#contact" class="btn btn-reference btn-lg btn-active scroll scrollpoint sp-effect2" role="button"><i class="fa fa-envelop-o"></i> Contact me</a>
    </div>
</header>
<!-- ==========================
    HEADER - END
=========================== -->

<!-- ==========================
    ABOUT - START
=========================== -->
<section id="about" class="content-first">
    <div class="container">
        <div class="row">
            <div class="col-sm-2 hidden-xs scrollpoint sp-effect1">
                <!-- Profile image -->
                <img src="image/profile.png" class="image-bordered img-responsive" alt="" />
            </div><!-- Profile end -->

            <div class="col-md-6 col-sm-6 scrollpoint sp-effect1">
                <!-- Profile description -->
                <h3>Sean McAdams</h3>
                <p>I am a Software Engineer primarily focused on Microsoft based enterprise application development. I pride myself on my experience at working and creating complex and secure applications that are highly maintainable and extensible. I am a full stack developer, i can create applications from the hardware up and am very comfortable working in a variety of environments.</p>

                <div class="details">
                    <!-- details row -->
                    <!-- details slideshow -->
                    <div class="media">
                        <div class="pull-left"><i class="fa fa-desktop"></i></div>
                        <div class="media-body">
                            <div id="slideshow1" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <!-- Slideshow item 1 active -->
                                    <div class="item active">
                                        <p>Proven enterprise application development experience for large financial companies.</p>
                                    </div>
                                    <!-- Slideshow item 2 -->
                                    <div class="item">
                                        <p>Forefront of technology, always up to speed on the latest technological improvements.</p>
                                    </div>
                                    <!-- Slideshow item 3 -->
                                    <div class="item">
                                        <p>Well architectured systems that save you money in the long run.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- details slideshow end -->
                </div><!-- details row end -->
            </div><!-- Profile description end-->

            <div class="col-md-4 col-sm-4 scrollpoint sp-effect2">

                <!--Timeline-->
                <div class="timeline" data-bind="foreach: TimelineEvents">
                    <div class="event">
                        <div class="event-info">
                            <div class="date" data-bind="text: year"></div>
                        </div>
                        <span data-bind="text: event"></span>
                    </div>

                </div>
                <!--timeline-->

            </div><!--col 3 end-->

        </div><!--Row about end-->

    </div><!-- Container end-->

</section>
<!-- ==========================
    ABOUT - END
=========================== -->
 
<!-- ==========================
       SERVICER - START
   =========================== -->
<section id="services" class="content-second">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="scrollpoint sp-effect3">What i do</h2>
                <p class="scrollpoint sp-effect3">There are a lot of skills that i can bring to a team, but the below skills are my specialties.</p>
            </div>

            <div class="col-md-3 service scrollpoint sp-effect1">
                <img src="image/ico5.png" alt="">
                <h3>Incremental Redesigns</h3>
                <p>In an enterprise environment system design is incredibly complex, systems can't always be redesigned from the ground up without significant time and money. I specialize in incrementally redesigning systems so that you can get the benefit of the latest technologies without a major re-write.</p>
            </div>


            <div class="col-md-3 service scrollpoint sp-effect1">
                <img src="image/ico4.png" alt="">
                <h3>Unique Solutions</h3>
                <p>Many problems can be very case specific, out of the box solutions just don't always exist. Decomposing the problem and providing a solution that is catered to you is what I am best at.</p>
            </div>

            <div class="col-md-3 service scrollpoint sp-effect2">
                <img src="image/ico3.png" alt="">
                <h3>Metrics Oriented</h3>
                <p>Being able to track and report changes is important, expecially in an enterprise environment. I am focused on getting real and measurable improvements to applications.</p>
            </div>

            <div class="col-md-3 service scrollpoint sp-effect2">
                <img src="image/ico1.png" alt="">
                <h3>Latest Technologies</h3>
                <p>You can never always be on the bleeding edge of the technology trends and often you wouldn't want to, but it is important to know the directions that the industry is heading. I spend a lot of time following the latest technology trends and can bring you a solution that will provide value for years.</p>
            </div>

        </div>
    </div>
</section>
<!-- ==========================
    SERVICES - END
=========================== -->

<!-- ==========================
    NUMBERS - START
=========================== -->
<section id="separator" class="content-first">
    <div class="container">
        <div class="row scrollpoint sp-effect3" data-bind="foreach: MySkills">
            <div class="col-sm-2">
                <i class="fa" data-bind="css: 'fa-' + icon"></i>
                <p data-bind="text: skill"></p>
            </div>
        </div>
    </div>
</section>
<!-- ==========================
    NUMBERS - END
=========================== -->


<!-- ==========================
    SHOWCASE - START
=========================== -->
<section id="showcase" class="content-second">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="scrollpoint sp-effect3">My latest work</h2>
                <p class="scrollpoint sp-effect3">Unfortunatly this site is still under construction so I do not have live samples to look at currently. Much of the work I do is proprietary and not directly sharable.</p>
            </div>

            <div class="col-lg-6 showcase-text scrollpoint sp-effect1">
                <div class="row" data-bind="foreach: MyWorkExamples">
                    <div class="col-sm-6 col-md-6 col-lg-12">
                        <div class="media">
                            <div class="pull-left showcase-icon"><i class="fa" data-bind="css: 'fa-' + icon"></i></div>
                            <div class="media-body">
                                <h3 class="media-heading" data-bind="text: title"></h3>
                                <p data-bind="text: description"></p>
                            </div>
                        </div>
                    </div>
                    
                </div>

                <div class="text-center showcase-button">
                    <a class="btn btn-primary btn-lg" role="button"><i class="fa fa-bolt"></i> See in action</a>
                </div>
            </div>

            <div class="col-lg-6 col-sm-8 col-md-8 col-md-offset-2 col-sm-offset-2 col-lg-offset-0 showcase-carousel hidden-xs scrollpoint sp-effect2">
                <img src="image/imac.png" class="img-responsive" alt="">

                <div id="carousel-reference" class="carousel slide" data-ride="carousel">
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active"><img src="image/image_01.png" alt=""></div>
                        <div class="item"><img src="image/image_02.png" alt=""></div>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-reference" data-slide="prev"><i class="fa fa-arrow-left"></i></a>
                    <a class="right carousel-control" href="#carousel-reference" data-slide="next"><i class="fa fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========================
    SHOWCASE - END
=========================== -->

<!-- ==========================
    QUOTES - START
=========================== -->
<section id="quotes" class="content-first">
    <div class="container">
        <div class="row scrollpoint sp-effect3">
            <div class="col-sm-8 col-sm-offset-2">
                <blockquote class="blockquote-reverse">
                    <p><i class="fa fa-quote-left"></i> Any fool can write code that a computer can understand. Good programmers write code that humans can understand.</p>
                    <footer> Martin Fowler</footer>
                </blockquote>
            </div>
        </div>
    </div>
</section>
<!-- ==========================
    QUOTES - END
=========================== -->

<!-- ==========================
        CONTACT - START
    =========================== -->
<section id="contact" class="content-first">
    <div class="container">
        <h2 class="scrollpoint sp-effect3">Contact me</h2>
        <div class="contact-alert" id="contact_alert">
        </div>
        <div class="row">
            <div class="col-sm-12">
                <img src="image/macbook.png" class="img-responsive hidden-xs" alt="">

                <div class="macbook-inner black">
                    <div class="row scrollpoint sp-effect4">
                        <div class="col-sm-8">
                            <h3 class="hidden-xs">Leave a message</h3>
                            @Html.Partial("_Contact", new ContactModel())
                        </div>
                        <div class="col-sm-4">

                            <img src="image/profile.png" class="contact-image image-responsive hidden-xs hidden-sm" alt="" />
                            <div class="contact-info">
                                <p>Sean McAdams</p>
                                <p>7595 Baymeadows Circle W Apt 402</p>
                                <p>Jacksonville, FL 32256</p>
                                <p>904-612-1766</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- ==========================
    CONTACT - END
=========================== -->

<!-- ==========================
    FOOTER - START
=========================== -->
<section id="footer">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 scrollpoint sp-effect3">
                <ul class="brands brands-inline" data-bind="foreach: LeftPortfolioLinks">
                    <li><a target="_blank" data-bind="href: link"><i class="fa" data-bind="css: 'fa-' + name"></i></a></li>
                </ul>
                <ul class="brands brands-inline" data-bind="foreach: RightPortfolioLinks">
                    <li><a target="_blank" data-bind="href: link"><i class="fa" data-bind="css: 'fa-' + name"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- ==========================
    FOOTER - END
=========================== -->


